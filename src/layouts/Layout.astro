---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2.0" />
		<meta
			name="description"
			content="The Law Office of Stacey Maloney PLLC, also known as Maloney Legal, provides trusted legal services in Estate Planning, Wills, Trusts, Probate, Real Estate Law, and Business Succession Planning. Serving clients with clarity and compassion."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#FFFFFF" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<link rel="manifest" href="/manifest.json" />
		<script
			is:inline
			async
			src="https://unpkg.com/pwacompat"
			cross-origin="anonymous"></script>

		<title>{title}</title>

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@staceymaloney" />
		<meta name="twitter:url" content="https://maloneylegalfl.com" />
		<meta name="twitter:title" content="Maloney Legal" />
		<meta
			name="twitter:description"
			content="Maloney Legal provides trusted legal services in Estate Planning, Wills, Trusts, Probate, Real Estate Law, and Business Succession Planning. Serving clients with clarity and compassion."
		/>
		<meta
			name="twitter:image"
			content="https://maloneylegalfl.com/icons/social-card.png"
		/>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Maloney Legal" />
		<meta
			property="og:description"
			content="Maloney Legal provides trusted legal services in Estate Planning, Wills, Trusts, Probate, Real Estate Law, and Business Succession Planning. Serving clients with clarity and compassion."
		/>
		<meta property="og:site_name" content="Maloney Legal" />
		<meta property="og:url" content="https://maloneylegalfl.com" />
		<meta
			property="og:image"
			content="https://maloneylegalfl.com/icons/social-card.png"
		/>

		<!-- Apple touch icon -->
		<link
			rel="apple-touch-icon"
			sizes="120x120"
			href="/icons/apple-touch-icon_120.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="152x152"
			href="/icons/apple-touch-icon_152.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="167x167"
			href="/icons/apple-touch-icon_167.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/icons/apple-touch-icon_180.png"
		/>

		<!-- Fonts -->
		<link
			rel="preload"
			href="/fonts/playfair-display-v37-latin-500.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/playfair-display-v37-latin-600.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/playfair-display-v37-latin-700.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/playfair-display-v37-latin-800.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/playfair-display-v37-latin-900.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/playfair-display-v37-latin-regular.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<script>
			if ("serviceWorker" in navigator) {
				window.addEventListener("load", function () {
					navigator.serviceWorker.register("/serviceWorker.js").then(() => {
						console.log("SW registration successful");
					});
				});
			}
		</script>
		<div class="flex flex-col min-h-screen">
			<Header />
			<main class="flex flex-col">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
