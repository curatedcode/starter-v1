---
import { MapPinIcon } from "./Icons";

const locations = [
	{
		name: "Bradenton",
		description: "Serving clients throughout Bradenton and surrounding areas.",
	},
	{
		name: "Lakewood Ranch",
		description: "Legal services for Lakewood Ranch residents and businesses.",
	},
	{
		name: "Sarasota",
		description: "Comprehensive legal help throughout Sarasota County.",
	},
	{
		name: "All of Florida",
		description: "Available to provide legal assistance statewide.",
	},
] as const;
---

<section class="py-16 md:py-24">
	<div class="container mx-auto px-4 md:px-6">
		<div class="text-center mb-16">
			<h2 class="text-3xl md:text-4xl font-playfair font-bold text-custom-navy">
				Service Areas
			</h2>
			<p class="mt-4 text-lg text-gray-700 max-w-2xl mx-auto">
				Proudly serving clients throughout Florida, with a focus on these
				communities:
			</p>
		</div>

		<div class="flex flex-col md:flex-row">
			<div class="md:w-1/2 mb-10 md:mb-0">
				<img
					src="images/where-we-serve-graphic.webp"
					alt="Outline of the State of Florida with text saying 'Where we serve: Sarasota, Bradenton, Lakewood Ranch, Statewide Across Florida'"
					class="w-full border border-gray-4 p-2 rounded-lg h-[300px] flex items-center justify-center lg:h-[400px]"
				/>
				<div
					class="mt-8 border border-gray-4 bg-custom-navy/5 p-6 rounded-lg hidden md:block lg:hidden"
				>
					<h3 class="font-playfair font-bold text-lg text-custom-navy mb-2">
						By Appointment Only
					</h3>
					<p class="text-gray-600 mb-4">
						We provide legal services by appointment only to ensure each client
						receives our dedicated attention.
					</p>
					<div class="flex items-center">
						<MapPinIcon class="size-5 text-accent-9 mr-2 flex-shrink-0" />
						<p class="text-custom-navy font-medium">
							Virtual appointments available
						</p>
					</div>
				</div>
			</div>

			<div class="md:w-1/2 md:pl-12">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
					{
						locations.map((location) => (
							<div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-accent-9">
								<div class="flex items-start">
									<MapPinIcon class="size-5 text-accent-9 mr-2 mt-1 flex-shrink-0" />
									<div>
										<h3 class="font-playfair font-bold text-lg text-custom-navy mb-2">
											{location.name}
										</h3>
										<p class="text-gray-600">{location.description}</p>
									</div>
								</div>
							</div>
						))
					}
				</div>

				<div
					class="mt-8 border border-gray-4 bg-custom-navy/5 p-6 rounded-lg md:hidden lg:block"
				>
					<h3 class="font-playfair font-bold text-lg text-custom-navy mb-2">
						By Appointment Only
					</h3>
					<p class="text-gray-600 mb-4">
						We provide legal services by appointment only to ensure each client
						receives our dedicated attention.
					</p>
					<div class="flex items-center">
						<MapPinIcon class="size-5 text-accent-9 mr-2 flex-shrink-0" />
						<p class="text-custom-navy font-medium">
							Virtual appointments available
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
