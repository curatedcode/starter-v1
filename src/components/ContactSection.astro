---
import Button from "./Button";
import { CalendarDaysIcon, MailIcon, MapPinIcon, PhoneIcon } from "./Icons";
---

<section id="contact" class="py-16 md:py-24 bg-gray-50">
	<div class="container mx-auto px-4 md:px-6">
		<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
			<div class="lg:w-5/12 mb-12 lg:mb-0">
				<h2
					class="text-3xl md:text-4xl font-playfair font-bold text-custom-navy mb-6"
				>
					Get Started with a Free Consultation
				</h2>
				<p class="text-lg text-gray-700 mb-8">
					Take the first step toward addressing your legal needs. Contact us
					today to schedule your free consultation.
				</p>

				<div class="space-y-6">
					<div class="flex items-start">
						<PhoneIcon class="size-6 text-accent-9 mr-4 mt-1" />
						<div>
							<h3 class="font-medium text-custom-navy text-lg">Phone</h3>
							<p class="text-gray-700">(941) 301-8877</p>
							<p class="text-sm text-gray-500 mt-1">
								Monday-Friday, 9AM-5PM EST
							</p>
						</div>
					</div>

					<div class="flex items-start">
						<MailIcon class="size-6 text-accent-9 mr-4 mt-1" />
						<div>
							<h3 class="font-medium text-custom-navy text-lg">Email</h3>
							<p class="text-gray-700">stacey@maloneylegalfl.com</p>
							<p class="text-sm text-gray-500 mt-1">We'll respond promptly</p>
						</div>
					</div>

					<div class="flex items-start">
						<MapPinIcon class="size-6 text-accent-9 mr-4 mt-1" />
						<div>
							<h3 class="font-medium text-custom-navy text-lg">
								Service Areas
							</h3>
							<p class="text-gray-700">Bradenton, Lakewood Ranch, Sarasota</p>
							<p class="text-sm text-gray-500 mt-1">Serving all of Florida</p>
						</div>
					</div>

					<div class="flex items-start">
						<CalendarDaysIcon class="size-6 text-accent-9 mr-4 mt-1" />
						<div>
							<h3 class="font-medium text-custom-navy text-lg">Availability</h3>
							<p class="text-gray-700">By appointment only</p>
							<p class="text-sm text-gray-500 mt-1">
								Virtual consultations available
							</p>
						</div>
					</div>
				</div>
			</div>

			<div
				class="lg:w-6/12 border border-gray-4 bg-white p-6 md:p-8 rounded-lg shadow-md"
			>
				<h3 class="text-2xl font-playfair font-bold text-custom-navy mb-6">
					Request a Consultation
				</h3>

				<form class="space-y-5">
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
						<div>
							<label
								for="firstName"
								class="block text-sm font-medium text-gray-700 mb-1"
							>
								First Name
							</label>
							<input
								type="text"
								id="firstName"
								placeholder="Your first name"
								class="flex h-10 w-full rounded-md border border-gray-6 bg-white px-3 py-2 text-base ring-offset-white placeholder:text-gray-8 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-custom-navy/80 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
							/>
						</div>
						<div>
							<label
								for="lastName"
								class="block text-sm font-medium text-gray-700 mb-1"
							>
								Last Name
							</label>
							<input
								type="text"
								id="lastName"
								placeholder="Your last name"
								class="flex h-10 w-full rounded-md border border-gray-6 bg-white px-3 py-2 text-base ring-offset-white placeholder:text-gray-8 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-custom-navy/80 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
							/>
						</div>
					</div>

					<div>
						<label
							for="email"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Email Address
						</label>
						<input
							id="email"
							type="email"
							placeholder="Your email address"
							class="flex h-10 w-full rounded-md border border-gray-6 bg-white px-3 py-2 text-base ring-offset-white placeholder:text-gray-8 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-custom-navy/80 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
						/>
					</div>

					<div>
						<label
							for="phone"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Phone Number
						</label>
						<input
							type="tel"
							id="phone"
							placeholder="Your phone number"
							class="flex h-10 w-full rounded-md border border-gray-6 bg-white px-3 py-2 text-base ring-offset-white placeholder:text-gray-8 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-custom-navy/80 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
						/>
					</div>

					<div>
						<label
							for="serviceArea"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Service Area
						</label>
						<select
							id="serviceArea"
							class="w-full border-gray-6 rounded-md shadow-sm focus:border-custom-navy focus:ring focus:ring-custom-navy/80 transition p-2"
						>
							<option value="">Select a service area</option>
							<option value="Estate Planning">Estate Planning</option>
							<option value="Probate">Probate</option>
							<option value="Real Estate">Real Estate</option>
							<option value="Other">Other</option>
						</select>
					</div>

					<div>
						<label
							for="message"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Message
						</label>
						<textarea
							id="message"
							placeholder="Briefly describe your legal needs"
							class="flex min-h-[80px] w-full rounded-md border border-gray-6 bg-white px-3 py-2 text-sm ring-offset-white placeholder:text-gray-8 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-custom-navy/80 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 h-32"
						></textarea>
					</div>

					<Button type="submit"> Request Free Consultation </Button>

					<p class="text-xs text-gray-500 text-center mt-4">
						By submitting this form, you agree to be contacted regarding your
						request. Your information will remain confidential.
					</p>
				</form>
			</div>
		</div>
	</div>
</section>
